$('#reply-to-comment').show();
window.location.hash = 'reply-to-comment';
$('#reply-to-comment').draggable({ opacity: 0.80 });
$('#reply-to-comment').html("<%= escape_javascript(render :partial => "comments/comment_form", 
  :locals => {:comment => @comment, :commentable => @commentable, :button_name => ts("Comment")}) %>");
$('#comment_cancel').click(function() {
    $('#reply-to-comment').hide();
    history.back(1);
  });
