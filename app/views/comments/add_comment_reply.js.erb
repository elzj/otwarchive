/* hide redundant navigation */
$("#navigation_for_comment_<%= "#{@commentable.id}" %>").hide();
/* render the form into the spot for it on the page */
$("#add_comment_reply_placeholder_<%= "#{@commentable.id}" %>").html("<%= escape_javascript(render :partial => "comments/comment_form", :locals => {:comment => @comment, :commentable => @commentable, :button_name => ts("Comment")}) %>");
$("#add_comment_reply_placeholder_<%= "#{@commentable.id}" %>").show();
