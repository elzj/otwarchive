<% comment_field_id = "#comment_#{@comment.id}" %>
/* roll up the original comment */
$("<%= comment_field_id %>").slideUp();
/* render the comment form in its place */
$("<%= comment_field_id %>").html("<%= escape_javascript(render :partial => "comments/comment_form", 
                  :locals => {:comment => @comment, :commentable => @comment.commentable, :button_name => ts("Update")}) %>");
/* roll down the comment form */
$("<%= comment_field_id %>").slideDown();
